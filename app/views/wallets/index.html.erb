<section class="mb-4">
  <div class="row g-0">
    <div class="w-auto ms-auto">
      <%= button_to "アドレス作成", wallets_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</section>

<!-- Section: Wallets -->
<section class="mb-4">
  <div class="card">
    <div class="card-header text-center py-3">
      <h5 class="mb-0 text-center">
        <strong>Wallets</strong>
      </h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover text-nowrap">
          <tbody>
            <tr>
              <th scope="col">Addresses</th>
              <td scope="col"><%= @wallets.first %></th>
            </tr>
            <% @wallets[1..-1].to_a.each do |address| %>
              <tr>
                <th scope="col"></th>
                <td scope="col"><%= address %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%= paginate @wallets %>
</section>
<!-- Section: Wallets -->
